doctype html
block vars
	- var bodyclass = null;

html( lang='en' )
	head
		block head
			meta( charset='utf-8' )
			meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
			meta( name='viewport', content='width=device-width' )

			title
				block title
					= locals.name

			link( rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description )
			link( rel='stylesheet', href='http://fonts.googleapis.com/css?family=Gloria+Hallelujah|Raleway:300' )
			link( rel='stylesheet', href=locals.url + '/css/layout.min.css' )
			link( rel='stylesheet', href=locals.url + '/css/global.css' )
			script( src=locals.url + '/js/jquery.min.js' )
			script( src=locals.url + '/js/pgth.js' )

	body( class='page page-' + bodyclass )
		header.header.page-header
			h1.ttl.page-header-ttl
				a.lnk.page-header-ttl-lnk( href=locals.url )= locals.name
			p.page-header-desc.description= locals.description

	block footer
		nav.page-nav
			- var articles = env.helpers.getArticles( contents )
			- var articlesGroup = _.chain( articles ).groupBy( function( article ) {
			- 	return article.metadata.record
			- }).value()

			ul.page-nav-lst.page-nav-l1-lst
				- var record = _.chain( articlesGroup ).keys().value()
				each arts, i in record
					li.page-nav-itm.page-nav-l1-itm
						h5.ttl.page-nav-hdr.page-nav-l1-hdr= record[i]
						- var item = _( articles ).chain().filter( function( x ) { return x.metadata.record === record[i] }).value()
						include _nav
						+menuMaker( 'page-nav-l2', item )

		aside.page-aside
			include _author
			+author( 'proem' )

			p.page-aside-copy &copy; #{ new Date().getFullYear() } #{ locals.owner }
			p.page-aside-poweredby
				|  powered by 
				a( href='https://github.com/jnordberg/wintersmith' ) Wintersmith

		main.page-content.main-content.content
			block content

			nav.page-content-nav.nav
				block navtop



		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-58869203-1', 'auto');
			ga('send', 'pageview');