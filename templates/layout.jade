doctype html
block vars
	- var bodyclass = null;

html( lang='en' )
	head
		block head
			meta( charset='utf-8' )
			meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
			meta( name='viewport', content='width=device-width' )

			title
				block title
					= locals.name

			link( rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description )
			link( rel='stylesheet', href='http://fonts.googleapis.com/css?family=Gloria+Hallelujah|Raleway:800,300' )
			link( rel='stylesheet', href=locals.url + '/css/layout.min.css' )
			link( rel='stylesheet', href=locals.url + '/css/global.css' )

	body( class='page page-' + bodyclass )
		block navtop

		header.header.page-header
			h1.ttl.page-header-ttl
				a.lnk.page-header-ttl-lnk( href=locals.url )= locals.name
			p.page-header-desc.description= locals.description

			nav.page-header-nav.page-nav-posts
				- var articles = env.helpers.getArticles(contents)

				- var tagmonster = _.chain( articles ).map( function( item ) {
				-	 return item.metadata.tags
				- }).value()


				each val, i in tagmonster
					p( role='menuitem')= val

				//- include _nav
				//- +menuMaker( 'page-nav-post', articles )


			block footer
				aside.page-header-aside
					include _author
					+author( 'proem' )

					p.page-header-aside-copy &copy; #{ new Date().getFullYear() } #{ locals.owner }
					p.page-header-aside-poweredby
						|  powered by 
						a( href='https://github.com/jnordberg/wintersmith' ) Wintersmith

		main.page-content.main-content.content
			block content