doctype html
block vars
	- var bodyclass = null;

html( lang='en' )
	head
		block head
			meta( charset='utf-8' )
			meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
			meta( name='viewport', content='width=device-width' )

			title
				block title
					= locals.name

			link( rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description )
			link( rel='stylesheet', href='http://fonts.googleapis.com/css?family=Raleway:700,300' )
			link( rel='stylesheet', href=locals.url + '/css/layout.min.css' )
			link( rel='stylesheet', href=locals.url + '/css/global.css' )

			link(rel="apple-touch-icon", sizes="57x57", href="/apple-touch-icon-57x57.png")
			link(rel="apple-touch-icon", sizes="60x60", href="/apple-touch-icon-60x60.png")
			link(rel="apple-touch-icon", sizes="72x72", href="/apple-touch-icon-72x72.png")
			link(rel="apple-touch-icon", sizes="76x76", href="/apple-touch-icon-76x76.png")
			link(rel="apple-touch-icon", sizes="114x114", href="/apple-touch-icon-114x114.png")
			link(rel="apple-touch-icon", sizes="120x120", href="/apple-touch-icon-120x120.png")
			link(rel="apple-touch-icon", sizes="144x144", href="/apple-touch-icon-144x144.png")
			link(rel="apple-touch-icon", sizes="152x152", href="/apple-touch-icon-152x152.png")
			link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon-180x180.png")

			link(rel="icon", type="image/png", href="/favicon-16x16.png", sizes="16x16")
			link(rel="icon", type="image/png", href="/favicon-32x32.png", sizes="32x32")
			link(rel="icon", type="image/png", href="/favicon-96x96.png", sizes="96x96")
			link(rel="icon", type="image/png", href="/android-chrome-192x192.png", sizes="192x192")

			link(rel="manifest", href="/manifest.json")
			link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#535236")
			link(rel="shortcut icon", href="/favicon.ico")

			meta(name="msapplication-TileColor", content="#ffc40d")
			meta(name="msapplication-TileImage", content="/mstile-144x144.png")
			meta(name="theme-color", content="#535236")

			script( src=locals.url + '/js/jquery.min.js' )
			script( src=locals.url + '/js/pgth.js' )

	body( class='page page-' + bodyclass )
		header.header.page-header
			h1.ttl.page-header-ttl
				a.lnk.page-header-ttl-lnk( href=locals.url )= locals.name
			p.page-header-desc.description= locals.description


		main.page-content.main-content.content
			block content
			nav.page-content-nav.nav
				block navtop

		include _author
		+author( 'proem' )

		footer.page-footer
			p.page-footer-info
				span.page-footer-info-copy &copy; #{ new Date().getFullYear() } #{ locals.owner }
				span.page-footer-info-poweredby
					|  powered by
					a( href='https://github.com/jnordberg/wintersmith' )  Wintersmith

		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-58869203-1', 'auto');
			ga('send', 'pageview');