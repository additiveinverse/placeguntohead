extends layout

block append vars
	- bodyclass = 'post'

block prepend title
	| #{ page.title + " - "}

block content
	article(class=bodyclass + ' ' + bodyclass + '-lst')
		header(class=bodyclass + '-hdr hdr')
			h1(class=bodyclass + '-hdr-ttl ttl')
				a(class=bodyclass + '-hdr-ttl-lnk lnk', href=page.url)= page.title
			span(class=bodyclass + '-hdr-meta ' + bodyclass + '-hdr-meta-track')
				= moment.utc(page.date).format('mm')
			span(class=bodyclass + '-hdr-meta ' + bodyclass + '-hdr-meta-release')
				= page.metadata.record	

		section(class=bodyclass + '-main')!= typogr(page.html).typogrify()

block prepend navtop
	nav.nav
		//- if prevPage
		//- 	a(href=prevPage.url) « Back
		//- else
		//- 	a(href='/index.html') « Back
		if nextPage
			a(href=nextPage.url) Next Story »

		a(href=contents.index.url) « Back to Table of Contents